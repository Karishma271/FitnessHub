@model FitnessHub.Models.Pool

@{
    ViewBag.Title = "Delete Pool";
}

<div class="container mt-4">
    <h1>Delete Pool</h1>

    <div class="alert alert-warning">
        <p>Are you sure you want to delete this pool?</p>
        <p><strong>@Model.Name</strong></p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt="Pool Image" style="width: 300px; height: auto;">
        }
        else
        {
            <img src="@Url.Content("~/Images/Pools/default.png")" alt="Default Image" style="width: 300px; height: auto;">
        }
    </div>

    @using (Html.BeginForm("Delete", "Pool", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PoolID)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("index")" class="btn btn-secondary">Cancel</a>
    }
</div>
