@model IEnumerable<FitnessHub.Models.DanceClass>

@{
    ViewBag.Title = "Dance Classes";
}

<h2>Dance Classes</h2>

<form method="get">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search..." />
    <input type="submit" value="Search" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Instructor</th>
            <th>Schedule</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Instructor</td>
                <td>@item.Schedule</td>
                <td>@item.Duration</td>
                <td>@item.Price</td>
                <td>@item.Status</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ClassID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ClassID })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create New", "Create")
