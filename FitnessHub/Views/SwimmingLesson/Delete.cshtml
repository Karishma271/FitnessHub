@model FitnessHub.Models.SwimmingLesson

@{
    ViewBag.Title = "Delete Swimming Lesson";
}

<h2>Delete Swimming Lesson</h2>

<h3>Are you sure you want to delete this swimming lesson?</h3>

<div>
    <h4>Swimming Lesson Details</h4>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Instructor</dt>
        <dd>@Model.Instructor</dd>
        <dt>Schedule</dt>
        <dd>@Model.Schedule</dd>
        <dt>Duration</dt>
        <dd>@Model.Duration</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
    </dl>

    @using (Html.BeginForm("Delete", "SwimmingLesson", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.SwimmingLessonID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
