@model FitnessHub.Models.StudioDto

@{
    ViewBag.Title = "Delete Studio";
}

<h2>Delete Studio</h2>

<h3>Are you sure you want to delete this studio?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Image</dt>
        <dd><img src="@Model.ImageUrl" alt="Studio Image" style="width:100px;height:100px;" /></dd>
    </dl>

    @using (Html.BeginForm("Delete", "Studio", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="StudioID" value="@Model.StudioID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
