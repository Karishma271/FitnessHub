@model FitnessHub.Models.StudioDto

@{
    ViewBag.Title = "Edit Studio";
}

<h2>Edit Studio</h2>

@using (Html.BeginForm("Edit", "Studio", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="StudioID" />

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageUrl, "Image Upload")
        <input type="file" name="ImageUrl" />
        @Html.ValidationMessageFor(model => model.ImageUrl)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
