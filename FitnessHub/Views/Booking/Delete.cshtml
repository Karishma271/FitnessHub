@model FitnessHub.Models.BookingDto

@{
    ViewBag.Title = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <h4>Booking Details</h4>
    <dl class="dl-horizontal">
        <dt>Dance Class ID</dt>
        <dd>@Model.DanceClassID</dd>
        <dt>Swimming Lesson ID</dt>
        <dd>@Model.SwimmingLessonID</dd>
        <dt>User ID</dt>
        <dd>@Model.UserID</dd>
        <dt>Booking Date</dt>
        <dd>@Model.BookingDate</dd>
        <dt>Amount Paid</dt>
        <dd>@Model.AmountPaid</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Booking", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="BookingID" value="@Model.BookingID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
